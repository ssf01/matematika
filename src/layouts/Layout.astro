---
interface Props {
  title?: string;
}

const { title = 'Математика' } = Astro.props;
---

<!doctype html>
<html lang="sr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Забавна математичка игра за децу - реши задатке и откључај ТВ!" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-dvh bg-gray-950 text-white antialiased">
    <slot />
  </body>
</html>

<style>
  @import '../styles/global.css';
  @import '../styles/print.css';
</style>
